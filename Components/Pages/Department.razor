@page "/Department"
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Departments Management</title>
    <link rel="stylesheet" href="~/Styles.css">
</head>
<body>

    <div class="container">
        <!-- Department Section -->
        <div class="add-department">
            <h2>Add Department</h2>
            <form id="addDepartmentForm">
                <input type="text" id="departmentId" placeholder="Enter Department ID" required><br><br>
                <input type="text" id="departmentName" placeholder="Enter Department Name" required><br><br>
                <input type="text" id="hod" placeholder="Enter Head of Department (HOD)" required><br><br>
                <button type="submit" class="submit-btn">Submit</button>
            </form>
        </div>

        <div class="department-list">
            <h2>List of Departments</h2>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Department Name</th>
                        <th>Head of Department</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Sample data -->
                    <tr>
                        <td>101</td>
                        <td>IT</td>
                        <td>James Bond</td>
                        <td><button class="edit-btn">Edit</button></td>
                        <td><button class="delete-btn">Delete</button></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        // JavaScript to handle adding departments
        document.getElementById('addDepartmentForm').addEventListener('submit', function (e) {
            e.preventDefault();

            // Fetch form data
            const departmentId = document.getElementById('departmentId').value;
            const departmentName = document.getElementById('departmentName').value;
            const hod = document.getElementById('hod').value;

            // Get table body to append the new row
            const table = document.querySelector('.department-list tbody');
            const newRow = `<tr>
                                        <td>${departmentId}</td>
                                        <td>${departmentName}</td>
                                        <td>${hod}</td>
                                        <td><button class="edit-btn">Edit</button></td>
                                        <td><button class="delete-btn">Delete</button></td>
                                    </tr>`;

            // Insert the new row
            table.insertAdjacentHTML('beforeend', newRow);

            // Clear form fields
            document.getElementById('departmentId').value = '';
            document.getElementById('departmentName').value = '';
            document.getElementById('hod').value = '';
        });
    </script>
</body>
</html>
